game:GetService("StarterGui"):SetCore("SendNotification",{
                Title = "Credit",
                Text = "Bohight123",
                 Duration = 15})

if game:GetService("CoreGui"):FindFirstChild("Emotes") then
    game:GetService("CoreGui"):FindFirstChild("Emotes"):Destroy()
end

wait(1)

local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local BigHeadButton = Instance.new("TextButton")
local HighlightButton = Instance.new("TextButton")
local CloseButton = Instance.new("TextButton")
local OpenButton = Instance.new("TextButton")
local InputSizeHeadButton = Instance.new("TextButton")
local TextBox = Instance.new("TextBox")
local bigHeadEnabled = false
local highlightEnabled = false
local bigHeadPlayers = {}
local highlightedPlayers = {}

-- Set up the GUI
ScreenGui.Parent = game:GetService("CoreGui")
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
Frame.Size = UDim2.new(0, 200, 0, 180)
Frame.Position = UDim2.new(1, -210, 0.5, -90)

-- Function to toggle big head on all players
local function toggleBigHead()
    bigHeadEnabled = not bigHeadEnabled
    for _, player in pairs(game.Players:GetPlayers()) do
        if player.Character and player.Character:FindFirstChild("Head") then
            local head = player.Character.Head
            if bigHeadEnabled then
                head.Size = Vector3.new(5, 5, 5)
                bigHeadPlayers[player.UserId] = true
            else
                head.Size = Vector3.new(1, 1, 1)
                bigHeadPlayers[player.UserId] = false
            end
        end
    end
    BigHeadButton.Text = bigHeadEnabled and "Big Head All Players (ON)" or "Big Head All Players (OFF)"
end

-- Function to toggle highlight on all players
local function toggleHighlight()
    highlightEnabled = not highlightEnabled
    for _, player in pairs(game.Players:GetPlayers()) do
        if player.Character then
            if highlightEnabled then
                local highlight = Instance.new("Highlight")
                highlight.OutlineColor = Color3.fromRGB(0, 0, 0)
                highlight.Name = "AutoHighlight"
                highlight.Parent = player.Character
                highlightedPlayers[player.UserId] = true
            else
                if player.Character:FindFirstChild("AutoHighlight") then
                    player.Character.AutoHighlight:Destroy()
                end
                highlightedPlayers[player.UserId] = false
            end
        end
    end
    HighlightButton.Text = highlightEnabled and "Highlight All Players (ON)" or "Highlight All Players (OFF)"
end

-- GUI Button setups
BigHeadButton.Parent = Frame
BigHeadButton.Size = UDim2.new(1, -10, 0, 30)
BigHeadButton.Position = UDim2.new(0, 5, 0, 10)
BigHeadButton.Text = "Big Head All Players (OFF)"
BigHeadButton.BackgroundColor3 = Color3.fromRGB(100, 100, 255)
BigHeadButton.MouseButton1Click:Connect(toggleBigHead)

HighlightButton.Parent = Frame
HighlightButton.Size = UDim2.new(1, -10, 0, 30)
HighlightButton.Position = UDim2.new(0, 5, 0, 45)
HighlightButton.Text = "Highlight All Players (OFF)"
HighlightButton.BackgroundColor3 = Color3.fromRGB(255, 255, 0)
HighlightButton.MouseButton1Click:Connect(toggleHighlight)

TextBox.Parent = Frame
TextBox.Size = UDim2.new(1, -10, 0, 30)
TextBox.Position = UDim2.new(0, 5, 0, 80)
TextBox.PlaceholderText = "Enter head size"

InputSizeHeadButton.Parent = Frame
InputSizeHeadButton.Size = UDim2.new(1, -10, 0, 30)
InputSizeHeadButton.Position = UDim2.new(0, 5, 0, 115)
InputSizeHeadButton.Text = "Set Head Size"
InputSizeHeadButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
InputSizeHeadButton.MouseButton1Click:Connect(function()
    local size = tonumber(TextBox.Text)
    if size and size > 0 and size <= 5 then
        for _, player in pairs(game.Players:GetPlayers()) do
            if player.Character and player.Character:FindFirstChild("Head") then
                player.Character.Head.Size = Vector3.new(size, size, size)
            end
        end
    end
end)

-- Update Players when they join, leave, or reset
local function updatePlayers()
    for _, player in pairs(game.Players:GetPlayers()) do
        if player.Character then
            if player.Character:FindFirstChild("Humanoid") then
                local humanoid = player.Character.Humanoid
                humanoid.CameraOffset = Vector3.new(0, 1.5, 0) -- Adjust camera height
            end
            if bigHeadPlayers[player.UserId] and player.Character:FindFirstChild("Head") then
                player.Character.Head.Size = Vector3.new(5, 5, 5)
            end
            if highlightedPlayers[player.UserId] then
                if not player.Character:FindFirstChild("AutoHighlight") then
                    local highlight = Instance.new("Highlight")
                    highlight.OutlineColor = Color3.fromRGB(0, 0, 0)
                    highlight.Name = "AutoHighlight"
                    highlight.Parent = player.Character
                end
            end
        end
    end
end

game.Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(updatePlayers)
    updatePlayers()
end)
game.Players.PlayerRemoving:Connect(updatePlayers)

-- Close Button
CloseButton.Parent = Frame
CloseButton.Size = UDim2.new(0, 20, 0, 20)
CloseButton.Position = UDim2.new(1, -25, 0, 5)
CloseButton.Text = "X"
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
CloseButton.MouseButton1Click:Connect(function()
    Frame.Visible = false
    OpenButton.Visible = true
end)

-- Open Button
OpenButton.Parent = ScreenGui
OpenButton.Size = UDim2.new(0, 100, 0, 50)
OpenButton.Position = UDim2.new(1, -110, 0.5, -55)
OpenButton.Text = "Open"
OpenButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
OpenButton.Visible = false

OpenButton.MouseButton1Click:Connect(function()
    Frame.Visible = true
    OpenButton.Visible = false
end)

-- Initial update for existing players
updatePlayers()
